# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username

# Telegram API Configuration (for Telethon)
API_ID=your_api_id
API_HASH=your_api_hash

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=teleaccount_bot
DB_USER=postgres
DB_PASSWORD=your_password

# Admin Configuration
ADMIN_CHAT_ID=your_admin_chat_id
ADMIN_USER_ID=your_admin_user_id

# Proxy Configuration
PROXY_LIST_URL=your_proxy_list_url
PROXY_USERNAME=your_proxy_username
PROXY_PASSWORD=your_proxy_password

# WebShare.io Proxy Provider (https://www.webshare.io/)
# Get your API token from: https://proxy.webshare.io/userapi/
WEBSHARE_API_TOKEN=your_webshare_api_token_here
WEBSHARE_ENABLED=true

# Smartproxy Provider (https://smartproxy.com/) - Optional
SMARTPROXY_USERNAME=your_smartproxy_username
SMARTPROXY_PASSWORD=your_smartproxy_password  
SMARTPROXY_ENABLED=false

# Proxy Strategy Configuration
PROXY_STRATEGY=weighted_random  # Options: weighted_random, best_reputation, fastest_response, lru, round_robin
PROXY_MIN_REPUTATION=50  # Minimum reputation score (0-100) to use proxy
PROXY_AUTO_REFRESH=true  # Automatically fetch new proxies daily
PROXY_REFRESH_INTERVAL=86400  # Seconds between auto-refresh (default: 24 hours)
FREE_PROXY_SOURCES_ENABLED=true  # Enable free proxy sources (proxyscrape, freeproxylist, etc.)

# Security
SECRET_KEY=your_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Redis Configuration (for session management)
REDIS_URL=redis://localhost:6379/0

# Application Settings
DEBUG=False
ENVIRONMENT=production