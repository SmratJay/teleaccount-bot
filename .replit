entrypoint = "real_main.py"
modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-23_05"
packages = ["cargo", "freetype", "gh", "gmp", "lcms2", "libiconv", "libimagequant", "libjpeg", "libsodium", "libtiff", "libwebp", "libxcrypt", "openjpeg", "openssl", "pkg-config", "postgresql", "rustc", "tcl", "tk", "zlib"]

[deployment]
run = ["python", "real_main.py"]
deploymentTarget = "vm"

[[ports]]
localPort = 8080
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Telegram Bot (Dev)"

[[workflows.workflow]]
name = "Telegram Bot (Dev)"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Note: Bot is deployed on AWS EC2. To test on Replit, stop the EC2 instance first to avoid conflicts.\" && python real_main.py"

[workflows.workflow.metadata]
outputType = "console"
